{
  "name": "music-metadata",
  "description": "Music metadata parser for Node.js, supporting virtual any audio and tag format.",
  "version": "8.3.0",
  "author": {
    "name": "Borewit",
    "url": "https://github.com/Borewit"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Borewit"
  },
  "type": "module",
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "default": "./dist/core.js"
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "keywords": [
    "music",
    "metadata",
    "meta",
    "audio",
    "tag",
    "tags",
    "duration",
    "MusicBrainz",
    "Discogs",
    "Picard",
    "ID3",
    "ID3v1",
    "ID3v2",
    "m4a",
    "m4b",
    "mp3",
    "mp4",
    "Vorbis",
    "ogg",
    "flac",
    "Matroska",
    "WebM",
    "EBML",
    "asf",
    "wma",
    "wmv",
    "ape",
    "MonkeyAudio",
    "aiff",
    "wav",
    "WavPack",
    "Opus",
    "speex",
    "musepack",
    "mpc",
    "dsd",
    "dsf",
    "mpc",
    "dff",
    "dsdiff",
    "aac",
    "adts",
    "length",
    "chapter",
    "info",
    "parse",
    "parser",
    "bwf"
  ],
  "scripts": {
    "clean": "del-cli dist",
    "compile-src": "tsc -p lib",
    "compile-test": "tsc -p test",
    "compile-doc": "tsc -p doc-gen",
    "compile": "npm run compile-src && npm run compile-test && npm run compile-doc",
    "eslint": "eslint lib/**/*.ts test/**/*.ts doc-gen/**/*.ts",
    "lint-md": "remark -u preset-lint-markdown-style-guide .",
    "lint": "npm run lint-md && npm run eslint",
    "test": "mocha",
    "build": "npm run clean && npm run compile && npm run doc-gen",
    "start": "npm-run-all compile lint cover-test",
    "test-coverage": "c8 npm run test",
    "send-codacy": "c8 report --reporter=text-lcov | codacy-coverage",
    "doc-gen": "node --import tsx doc-gen/gen.ts"
  },
  "dependencies": {
    "@tokenizer/token": "^0.3.0",
    "content-type": "^1.0.5",
    "debug": "^4.3.4",
    "file-type": "^18.6.0",
    "media-typer": "^1.1.0",
    "strtok3": "^7.0.0",
    "token-types": "^5.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.16",
    "@types/chai-as-promised": "^7.1.8",
    "@types/debug": "^4.1.12",
    "@types/file-type": "^10.9.1",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "chai-as-promised": "^8.0.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^54.0.0",
    "mime": "^4.0.3",
    "mocha": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.0",
    "tsx": "^4.16.0",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borewit/music-metadata.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Borewit/music-metadata/issues"
  }
}
