{
  "name": "music-metadata",
  "description": "Music metadata parser for Node.js, supporting virtual any audio and tag format.",
  "version": "7.12.3",
  "author": {
    "name": "Borewit",
    "url": "https://github.com/Borewit"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Borewit"
  },
  "keywords": [
    "music",
    "metadata",
    "meta",
    "audio",
    "tag",
    "tags",
    "duration",
    "MusicBrainz",
    "Discogs",
    "Picard",
    "ID3",
    "ID3v1",
    "ID3v2",
    "m4a",
    "m4b",
    "mp3",
    "mp4",
    "Vorbis",
    "ogg",
    "flac",
    "Matroska",
    "WebM",
    "EBML",
    "asf",
    "wma",
    "wmv",
    "ape",
    "MonkeyAudio",
    "aiff",
    "wav",
    "WavPack",
    "Opus",
    "speex",
    "musepack",
    "mpc",
    "dsd",
    "dsf",
    "mpc",
    "dff",
    "dsdiff",
    "aac",
    "adts",
    "length",
    "chapter",
    "info",
    "parse",
    "parser",
    "bwf"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "clean": "del-cli dist",
    "validate": "run-s format lint build test",
    "node-ci": "run-s lint build test:coverage",
    "format": "prettier --cache --write lib test doc-gen example",
    "build": "run-s clean build:*",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:doc": "ts-node doc-gen/gen.ts",
    "lint": "run-s lint:*",
    "lint:type": "tsc -p tsconfig.check.json",
    "lint:eslint": "eslint --cache lib test doc-gen",
    "lint:format": "prettier --cache --check lib test doc-gen example",
    "lint:eslint:fix": "eslint --cache --fix lib test doc-gen",
    "lint:md": "remark -u preset-lint-recommended .",
    "test": "run-s test:vitest",
    "test:vitest": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "test:buildsize": "vite build",
    "watch:test": "vitest --watch",
    "watch:typescript": "tsc -p tsconfig.check.json -w"
  },
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "@vitest/coverage-c8": "^0.23.2",
    "c8": "^7.12.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "vite": "^3.1.0",
    "vitest": "^0.23.1"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borewit/music-metadata.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Borewit/music-metadata/issues"
  }
}
